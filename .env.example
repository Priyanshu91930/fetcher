# Telegram API Credentials
# Get these from https://my.telegram.org
API_ID=12345678
API_HASH=your_api_hash_here

# User Session String
# Generate using: python session_generator.py
SESSION_STRING=your_session_string_here

# Alternate Session Strings (for flood wait handling)
# Generate additional sessions using session_generator.py and add them here
# When a long flood wait is detected, the bot will switch to the next session
SESSION_STRING_2=
SESSION_STRING_3=

# Flood Wait Handling
# Threshold in seconds - if flood wait exceeds this, switch to alternate session
# Default: 3600 (1 hour)
FLOOD_WAIT_THRESHOLD=3600

# Enable/disable automatic session switching (true/false)
AUTO_SWITCH_SESSION=true

# Global cooldown between major operations (in seconds)
# Helps prevent rate limiting - bot waits this long between operations
# Default: 25 seconds
GLOBAL_COOLDOWN=25.0

# INDEX Channel - The main channel with series list
# This channel contains clickable links to individual series channels
INDEX_CHANNEL=@SeriesBayX0

# Destination Channel to Forward Files
# Examples: @my_channel or -1001234567890
DESTINATION_CHANNEL=-1003321519174

# Maximum series to process per run (0 = unlimited)
MAX_SERIES_TO_PROCESS=5

# Delay Settings (in seconds)
# Adjust these to avoid rate limits
BUTTON_CLICK_DELAY=2.0
SEASON_BUTTON_DELAY=3.0
FILE_COLLECTION_DELAY=1.5
FORWARD_DELAY=1.0
NEXT_BUTTON_DELAY=2.0
JOIN_CHANNEL_DELAY=2.0
BOT_START_DELAY=3.0

# Maximum wait time for file bot response (seconds)
FILE_WAIT_TIMEOUT=60.0

# Auto-fetch next post (true/false)
# When enabled, bot automatically continues to next post after completing current one
# Uses sequential message IDs (e.g., 380 -> 381 -> 382)
AUTO_FETCH_NEXT_POST=true

# Maximum posts to auto-fetch in one run (prevents infinite loops)
# Set to 0 for unlimited (not recommended)
MAX_AUTO_FETCH_POSTS=50

# Control Bot Token
# Get from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Admin User IDs (comma separated)
# Leave empty to allow any user (NOT RECOMMENDED)
ADMIN_IDS=1246987713
