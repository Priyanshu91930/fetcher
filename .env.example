# Telegram API Credentials
# Get these from https://my.telegram.org
API_ID=12345678
API_HASH=your_api_hash_here

# User Session String
# Generate using: python session_generator.py
SESSION_STRING=your_session_string_here

# INDEX Channel - The main channel with series list
# This channel contains clickable links to individual series channels
INDEX_CHANNEL=@SeriesBayX0

# Destination Channel to Forward Files
# Examples: @my_channel or -1001234567890
DESTINATION_CHANNEL=-1003321519174

# Maximum series to process per run (0 = unlimited)
MAX_SERIES_TO_PROCESS=5

# Delay Settings (in seconds)
# Adjust these to avoid rate limits
BUTTON_CLICK_DELAY=2.0
SEASON_BUTTON_DELAY=3.0
FILE_COLLECTION_DELAY=1.5
FORWARD_DELAY=1.0
NEXT_BUTTON_DELAY=2.0
JOIN_CHANNEL_DELAY=2.0
BOT_START_DELAY=3.0

# Maximum wait time for file bot response (seconds)
FILE_WAIT_TIMEOUT=60.0
